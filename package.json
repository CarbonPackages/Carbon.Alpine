{
  "name": "base.alpine",
  "description": "Dependencies for Base.Alpine",
  "license": "UNLICENSED",
  "private": true,
  "browserslist": [
    "defaults",
    "not ie 11",
    "not dead"
  ],
  "scripts": {
    "prettierFiles": "prettier --write --no-error-on-unmatched-pattern 'Resources/Private/**/*.{js,ts}'",
    "main": "esbuild Resources/Private/Assets/*.js --bundle --minify --outdir=Resources/Public",
    "ui": "esbuild Resources/Private/Assets/UI/*.js --bundle --minify --outdir=Resources/Public/UI",
    "plugins": "esbuild Resources/Private/Assets/Plugins/*.js --bundle --minify --outdir=Resources/Public/Plugins",
    "custom": "esbuild Resources/Private/Assets/Custom/*.ts --bundle --minify --outdir=Resources/Public/Custom",
    "build": "pnpm main | pnpm ui | pnpm plugins | pnpm custom",
    "start": "pnpm build"
  },
  "dependencies": {
    "@alpinejs/collapse": "^3.12.2",
    "@alpinejs/focus": "^3.12.2",
    "@alpinejs/intersect": "^3.12.2",
    "@alpinejs/mask": "^3.12.2",
    "@alpinejs/morph": "^3.12.2",
    "@alpinejs/persist": "^3.12.2",
    "alpinejs": "^3.12.2",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "esbuild": "^0.17.19",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8"
  }
}
